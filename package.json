{
    "name": "cla-worker",
    "version": "1.0.0",
    "description": "Clarive Worker",
    "main": "src/cli.js",
    "scripts": {
        "test": "jest",
        "build": "rimraf ./dist && tsc && cp -R package.json bin ./dist/ && cd ./dist && pkg bin/cla-worker -c package.json && cd .. && find ./dist/ -name '*.j*' -exec rm {} \\;",
        "build-watch": "tsc -w",
        "test-watch": "npx jest --watchAll",
        "docs": "gitbook build docs ../cla-worker-docs",
        "lint": "tslint -p ."
    },
    "bin": "bin/cla-worker",
    "engines": {
        "node": ">=10"
    },
    "pkg": {
        "assets": [
            "./src/**"
        ],
        "targets": [
            "node10"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/clarive/claw.git"
    },
    "keywords": [
        "Clarive",
        "agent",
        "worker"
    ],
    "author": "Clarive, Inc.",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/clarive/claw/issues"
    },
    "homepage": "https://github.com/clarive/claw#readme",
    "dependenciesDev": {
        "nodemon": "^1.17.2",
        "pkg": "^4.3.0"
    },
    "dependencies": {
        "@types/jest": "^24.0.15",
        "axios": "^0.19.0",
        "colors": "^1.2.1",
        "daemonize-process": "^1.0.9",
        "eventsource": "^1.0.7",
        "ioredis": "^3.2.2",
        "js-yaml": "^3.13.1",
        "module-alias": "^2.2.0",
        "shortid": "^2.2.14",
        "tslib": "^1.10.0",
        "yargs": "^11.0.0"
    },
    "devDependencies": {
        "http-debug": "^0.1.2",
        "jest": "^24.8.0",
        "rimraf": "^2.6.3",
        "ts-jest": "^24.0.2",
        "typescript": "^3.5.2"
    }
}
